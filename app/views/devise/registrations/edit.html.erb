<div class="flex-col self-center mb-10">
<h2 class="text-3xl text-white mb-10">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, class:"flex", url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:"text-sm font-medium text-gray-200 dark:text-gray-300" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
    class:"mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mt-8">
    <%= f.label :username, class:"text-sm font-medium text-gray-200 dark:text-gray-300" %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username",
    class:"mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>

  <div class="field mt-8">
    <%= f.label :password, class:"text-sm font-medium text-gray-200 dark:text-gray-300" %> 
    <i class="text-xs">(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",
    class:"mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <% if @minimum_password_length %>
      <em class="text-sm text-gray-200"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field mt-8">
   <%= f.label :password_confirmation, class:"text-sm font-medium text-gray-200 dark:text-gray-300" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    class:"mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>

  <div class="field mt-8">
    <%= f.label :current_password,class:"text-sm font-medium text-gray-200 dark:text-gray-300" %> <i class="text-xs text-red-400">(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",
    class:"mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
  </div>

  <div class="actions mb-6">
    <%= f.submit "Update", class:"mt-8 cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>
<% end %>
    <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,
    class:"text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-red-900"%>
<%= link_to "Back", :back,class:"font-medium text-blue-600 hover:underline dark:text-blue-500" %>
</div>
